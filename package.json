{
  "name": "@data-provider/core",
  "version": "1.8.1",
  "description": "Extensible Data Provider and Data Selectors",
  "keywords": [
    "data",
    "provider",
    "selector",
    "cache",
    "reactive",
    "extensible"
  ],
  "author": "Javier Brea",
  "license": "Apache-2.0",
  "repository": "https://github.com/data-provider/core",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/core.cjs.js",
  "module": "dist/core.esm.js",
  "scripts": {
    "build": "rollup --config",
    "test:ci": "nyc mocha --recursive test",
    "test:coverage": "npm run test:ci",
    "lint": "eslint src test",
    "lint-staged": "lint-staged",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "is-promise": "2.1.0",
    "lodash": "4.17.15"
  },
  "devDependencies": {
    "@babel/core": "7.8.4",
    "@babel/preset-env": "7.8.4",
    "@babel/register": "7.8.3",
    "@istanbuljs/nyc-config-babel": "3.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-istanbul": "6.0.0",
    "babel-polyfill": "6.26.0",
    "coveralls": "3.0.9",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "mocha": "7.0.1",
    "mocha-sinon-chai": "3.0.0",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rollup": "1.31.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-uglify": "6.0.4"
  },
  "lint-staged": {
    "src/**/*.js": "eslint",
    "test/**/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "engines": {
    "node": "10.x || 12.x || 13.x"
  }
}
