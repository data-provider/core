{
  "name": "@data-provider/prismic",
  "version": "1.5.0",
  "description": "Data Provider for reading data from Prismic CMS API",
  "keywords": [
    "data-provider",
    "origin",
    "cms",
    "prismic",
    "client",
    "api-client",
    "reactive"
  ],
  "author": "Javier Brea",
  "license": "Apache-2.0",
  "repository": "https://github.com/data-provider/prismic",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/data-provider-prismic.cjs.js",
  "module": "dist/data-provider-prismic.esm.js",
  "scripts": {
    "lint": "eslint src test",
    "lint-staged": "lint-staged",
