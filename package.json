{
  "name": "@data-provider/core",
  "version": "2.5.1",
  "description": "Async Data Provider agnostic about data origins",
  "keywords": [
    "data",
    "provider",
    "redux",
    "selector",
    "cache",
    "reactive",
    "state",
    "agnostic"
  ],
  "author": "Javier Brea",
  "license": "Apache-2.0",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/data-provider"
  },
  "homepage": "https://www.data-provider.org",
  "repository": "https://github.com/data-provider/core",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup --config",
    "test": "jest",
    "test:coverage": "npm run test",
    "test:e2e:browser:install": "cd test-e2e/browser && npm i && cd vanilla-app && npm i && cd ../react-app && npm i",
    "test:e2e:browser": "cd test-e2e/browser && npm run test:vanilla-app && npm run test:react-app",
    "test:e2e:node:install": "cd test-e2e/nodejs/esm && npm i",
    "test:e2e:node": "cd test-e2e/nodejs/cjs && npm run test && cd ../esm && npm run test",
    "test:e2e": "npm run test:e2e:browser && npm run test:e2e:node",
    "test:e2e:ci": "npm run test:e2e:browser:install && npm run test:e2e:node:install && npm run test:e2e",
    "test:ci": "npm run build && npm run test:coverage && npm run test:e2e:ci",
    "lint": "eslint src test test-e2e/browser/vanilla-app/public/main.js test-e2e/browser/react-app/src test-e2e/browser/cypress test-e2e/nodejs/cjs test-e2e/nodejs/esm/src *.js",
    "lint-staged": "lint-staged",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "stryker:dev": "stryker run stryker.conf.local.js",
    "stryker": "stryker run",
    "stryker:ci": "npx stryker run"
  },
  "peerDependencies": {
    "redux": "4.x"
  },
  "dependencies": {
    "is-promise": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/register": "7.10.3",
    "@rollup/plugin-babel": "5.0.3",
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "8.0.1",
    "@stryker-mutator/babel-transpiler": "3.3.0",
    "@stryker-mutator/core": "3.3.0",
    "@stryker-mutator/javascript-mutator": "3.3.0",
    "@stryker-mutator/jest-runner": "3.3.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.1.0",
    "babel-polyfill": "6.26.0",
    "coveralls": "3.0.9",
    "eslint": "7.3.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "redux": "4.0.5",
    "rollup": "2.17.1",
    "rollup-plugin-terser": "6.1.0",
    "sinon": "9.0.2"
  },
  "lint-staged": {
    "*.js": "eslint",
    "src/**/*.js": "eslint",
    "test/**/*.js": "eslint",
    "test-e2e/browser/cypress/**/*.js": "eslint",
    "test-e2e/browser/vanilla-app/public/main.js": "eslint",
    "test-e2e/browser/react-app/src/**/*.js": "eslint",
    "test-e2e/nodejs/cjs/**/*.js": "eslint",
    "test-e2e/nodejs/esm/src/**/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "engines": {
    "node": "12.x || 14.x"
  }
}
